# Solution Engineering Agent Configuration
# Copy this file to .env and fill in your values

# Required: Azure OpenAI configuration
AZURE_OPENAI_ENDPOINT=https://<your-resource>.cognitiveservices.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-5.2

# Optional: API Key for authentication (leave unset to allow all requests in dev)
API_KEY=your-api-key-here

# Optional: CORS allowed origins (comma-separated, use * for development only)
# CORS_ALLOWED_ORIGINS=["https://your-frontend.com"]

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# For hypothesis validation (optional)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_DEFAULT_REGION=swedencentral
AZURE_RESOURCE_GROUP=your-resource-group

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=gtm-agent

# Azure AD / Service Principal authentication (optional - for non-interactive auth)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
