# Solution Engineering Agent Configuration
# Copy this file to .env and fill in your values

# Required: Azure Foundry/OpenAI configuration
AZURE_OPENAI_ENDPOINT=https://<your-resource>.services.ai.azure.com/api/projects/<project>
AZURE_OPENAI_DEPLOYMENT=gpt-5.2

# Optional: API Key for authentication (leave empty for Azure AD auth)
API_KEY=your-api-key-here

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# For hypothesis validation (optional)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_DEFAULT_REGION=swedencentral
AZURE_RESOURCE_GROUP=gtm-agent-tests

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=gtm-agent
